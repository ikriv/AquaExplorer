<Application x:Class="AquaExplorer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             >
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
        <SolidColorBrush x:Key="AquaBackground" Color="#BBFFFF" />
        <SolidColorBrush x:Key="DarkAquaBackground" Color="#99EEEE" />
        <SolidColorBrush x:Key="LightAquaBackground" Color="#CCFFFF" />
        <LinearGradientBrush x:Key="AquaHeaderBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#99FFFF" />
            <GradientStop Offset="1" Color="#BBFFFF" />
        </LinearGradientBrush>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource AquaBackground}" />
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="{StaticResource AquaBackground}" />
        </Style>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="{StaticResource AquaHeaderBackground}" />
        </Style>
    </Application.Resources>
</Application>
